<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aperture.community.member.dao.FavoratesDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.aperture.community.member.model.FavoratesEntity" id="favoratesMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="memberId" column="member_id"/>
        <result property="description" column="description"/>
        <result property="isDefault" column="is_default"/>
        <result property="isPublic" column="is_public"/>
    </resultMap>

    <update id="addFavoratesCollection">
        update ums_favorates set collection_count=collection_count+1 where id=#{favoratesId}
    </update>

    <update id="subFavoratesCollection">
        update ums_favorates set collection_count=collection_count-1 where id=#{favoratesId}
    </update>

</mapper>